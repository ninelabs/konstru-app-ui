{{#contentFor "pageTitle"}}Sign In{{/contentFor}}

<div class="row align-items-center justify-content-center konstru-full-window m-0 bg-inverse">
  <div class="text-center flex-middle">
    <div class="card account">
      <form action="/prototype/dashboard" method="get">
        <div class="card-block pt-4 pr-3 pl-3">
          <div class="pt-2 pb-4">
            <img src="/images/konstru-color.svg" width="160" class="director-logo" />
          </div>
          <div class="form-group pt-2">
            <input type="text" placeholder="Email address" class="form-control" autofocus />
          </div>
          <div class="form-group">
            <input type="password" placeholder="Password" class="form-control" />
          </div>
        </div>
        <div class="card-block account-footer rounded-bottom pt-3 pb-3 pl-3 pr-3">
          <a href="/prototype/dashboard" class="btn btn-primary btn-block">Sign in</a>
        </div>
      </form>
    </div>
    <div class="text-white">
      <a href="/prototype/forgot-password">Forgot your password?</a>
    </div>
  </div>
</div>
